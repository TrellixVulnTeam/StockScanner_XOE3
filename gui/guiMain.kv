#:import Toolbar Toolbar

<Screen>
    size: self.width, self.height

    BoxLayout:
        orientation: "horizontal"
        size: root.width, root.height
        padding: 50,0,0,0
        Toolbar:
            id: toolbar
            size_hint: .3, 1
            pos_hint: {"top": 1}

        Label:

            size_hint: .65, 1
            canvas.before:
                Color:
                    rgba: (1,0,0,1)

                Rectangle:
                    size: self.size
                    pos: self.pos
